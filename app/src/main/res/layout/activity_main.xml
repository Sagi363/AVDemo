<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main"
        android:background="@drawable/background_gradient_color"
        tools:context="com.sagihatzabi.breakingline.MainActivity">

    <View android:id="@+id/black_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:visibility="gone"
        android:background="@color/transparentBackground"/>

    <LinearLayout
            android:id="@+id/main_activity_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    </LinearLayout>

    <fragment
            android:id="@+id/main_activity_cart_fragment"
            android:name="com.sagihatzabi.breakingline.CartFragment"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_cart"/>

</RelativeLayout>
